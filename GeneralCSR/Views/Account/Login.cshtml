<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head profile="http://gmpg.org/xfn/11">

    <title>Rikyas Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,500,600" media="all" />
    <link href="/assets/vendors/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
            font-family: montserrat;
        }

        .full {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
        }

        .left {
            position: absolute;
            left: 0;
            width: 65%;
            height: 100%;
            background-color: #0077B5;
            padding: 100px;
            /*color: #b4d0e7;*/
            color: #eff8ff;
            padding-top: 0px;
        }

        .right {
            position: absolute;
            right: 0;
            width: 35%;
            height: 100%;
            padding: 0px 60px;
            box-shadow: 0px 0px 10px #000;
        }

        .title {
            font-size: 25px;
            /*font-weight: 500;*/
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 8px 10px;
            font-size: 16px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 0px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

            .form-control:focus {
                border-color: #005f92;
                outline: 0 !important;
                outline-offset: 0 !important;
            }

        .btn {
            display: inline-block;
            padding: 10px 10px;
            margin-bottom: 0;
            font-size: 13px;
            font-weight: 400;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -ms-touch-action: manipulation;
            touch-action: manipulation;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-image: none;
            border: 1px solid transparent;
            border-radius: 0px;
            color: #fff;
        }

        .btn-primary {
            background-color: #0077B5;
            border: 1px solid #0077B5;
        }

        .btn-default {
            color: #333;
            background-color: #fff;
            border-color: #ccc;
        }

        .mb-20 {
            margin-bottom: 20px !important;
        }
        .mt-20 {
            margin-top: 20px;
        }
        .mb-14 {
            margin-bottom: 10px !important;
        }

        h1 {
            font-size: 60px;
            margin-bottom: 14px;
        }

        .disclaimer {
            color: #999;
            font-size: 13px;
            text-align: left;
        }

        .div-email-signup {
            /*position: relative;
            top: 50%;
            margin-top: -243px;*/
        }

        .div-email-login {
            /*position: relative;
            top: 50%;
            margin-top: -171px;*/
        }

        .div-main{
            position: relative;
            top: 50%;
            margin-top: -250px;
        }

        a {
            color: #337ab7;
            text-decoration: none;
        }

        .hidden {
            display: none;
        }

        .sign-up-text {
            font-size: 14px;
            display: inline;
            background-repeat: no-repeat;
            background-position: left center;
            background-size: 20px 20px;
            clear: right;
            padding: 5px 0 5px 30px;
        }

            .sign-up-text.google {
                background-image: url(../assets/images/social/new-google-favicon-512.png);
            }

            .sign-up-text.facebook {
                background-image: url(../assets/images/social/Facebook.png);
            }
            .sign-up-text.mail {
                background-image: url(../assets/images/social/Mail.png);
            }
    </style>
    <script src="~/assets/vendors/jquery/jquery-3.1.1.min.js"></script>
</head>
<body>
    <div class="full">
        <div class="left">
            
            <p style="font-size: 50px; margin-top: 25%">
                Solve community problems
            </p>

            <h1 style="color: #d6d6d6; margin-top: 100px;">Rikyas</h1>
            
            @*<br />
                <br />
                <div>
                    <div>&#9679;&nbsp; Solving our issues</div>
                    <div>
                        &#9679;&nbsp; Make your lives better
                    </div>
                    <div>
                        &#9679;&nbsp; Social brainstorming
                    </div>
                    <div>
                        &#9679;&nbsp; Get issues resolved
                    </div>
                    <div>
                        &#9679;&nbsp; Implementing new ways to solve all problems
                    </div>
                    <div>
                        &#9679;&nbsp; Solving problems, more efficiently, quicker
                    </div>
                </div>*@
        </div>
        <div class="right">

            <div class="div-main">

                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text facebook">Sign up with Facebook</span></button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text google">Sign up with Google</span></button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button" onclick="showHideLogin(this);" id="email-btn"><span class="sign-up-text mail">Sign up with Email</span></button>

                <h4 class="text-center">OR</h4>

                <div class="div-email-login ">
                    @*<button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text facebook">Sign in with Facebook</span></button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text google">Sign in with Google</span></button>*@
                    <h3 class="title mt-20 text-center">Login</h3>
                    @*<div class="signup-link mb-20">or <a href="#">create an account</a></div>*@
                    <input type="text" id="Email-Signin" class="form-control mb-14" name="" placeholder="Email" />
                    <input type="password" id="Pass-Signin" class="form-control mb-14" name="" placeholder="Password" />
                    <button class="btn btn-primary mb-14" style="width: 100%" id="signup-btn" onclick="Login(this)" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing...">Login</button>

                </div>

                <div class="div-email-signup hidden">
                    <h4 class="title mt-20">Sign Up</h4>
                    <div class="signup-link mb-20">or <a href="#" onclick="showHideLogin(this);">login to your account</a></div>
                    <input type="text" id="FName" class="form-control mb-14" placeholder="First Name" />
                    <input type="text" id="LName" class="form-control mb-14" placeholder="Last Name" />
                    <input type="text" id="Email-Signup" class="form-control mb-14" name="" placeholder="Email" />
                    <input type="password" id="Pass-Signup" class="form-control mb-14" name="" placeholder="Password" />
                    <div class="disclaimer mb-14">
                        By clicking "Sign Up" you indicate that you have read and agree to the Terms of Service and <a href="/Account/Privacy" target="_blank">Privacy Policy</a>
                    </div>
                    <button class="btn btn-primary mb-14" style="width: 100%" id="signin-btn" onclick="SignUp(this)" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing...">Sign up</button>

                </div>
            </div>
        </div>
    </div>


    <script src="/assets/vendors/script/all.min.js"></script>
    <script src="/assets/custom/script/func.js"></script>

    <script>
        function showHideLogin(e) {
            var $me = $(e);
            $("#email-btn").toggleClass("hidden");
            $(".div-email-login").toggleClass("hidden");
            $(".div-email-signup").toggleClass("hidden");
        }

        function Login(e) {
            var Data = { "Email": $("#Email-Signin").val(), "Password": $("#Pass-Signin").val() }
            runAjax('@Url.Action("Login", "Account")', Data, true, $(e), "button", afterLogin, $(e));
        }

        function afterLogin(data, e) {
            if (data.Table[0]["ID"] != 0) {
                if (getParameterByName("ref")) {
                    window.location.href = getParameterByName("ref");
                } else {
                    window.location.href = "/Home/Index";
                }
            } else {
                showAlert("d", "Oops! Its look like you enter a wrong email and password", $(e).closest("div"), false);
                if ($("#Email-Signin").val().length > 0) $("#Pass-Signin").focus();
                else $("#Email-Signin").focus();
                $("#Pass-Signin").val("");
            }
        }

        function SignUp(e) {
            var Data = {
                "FName": $("#FName").val(),
                "LName": $("#LName").val(),
                "UName": "",
                "Email": $("#Email-Signup").val(),
                "Pass": $("#Pass-Signup").val(),
            }
            if (Data.FName == "" || Data.LName == "" || Data.Email == "" || Data.Pass == "") {
                showAlert("d", "All fields are required!", $(e).closest("div"), false);
            } else {
                if (validateEmail(Data.Email)) {
                    runAjax('@Url.Action("InsertUser", "Account")', Data, true, $(e), "button", afterSignUp, $(e));
                } else {
                    showAlert("d", "Oops! Its look like you entered a wrong email address", $(e).closest("div"), false);
                }
            }
        }
        function afterSignUp(data, e) {
            var Data = { "Email": $("#Email-Signup").val(), "Password": $("#Pass-Signup").val() }
            runAjax('@Url.Action("Login", "Account")', Data, true, $(e), "button", afterLogin, $(e));
        }

        $(document).keypress(function (e) {
            if (e.keyCode == 13) {
                if ($("#FName").is(":focus") || $("#LName").is(":focus") || $("#Email-Signup").is(":focus") || $("#Pass-Signup").is(":focus"))
                    $("#signup-btn").click();
                else
                    $("#login-btn").click();
            }
        });
    </script>
</body>
</html>