@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head profile="http://gmpg.org/xfn/11">

    <title>Rikyas Login</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,500,600" media="all" />
    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
            font-family: montserrat;
        }

        .full {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
        }

        .left {
            position: absolute;
            left: 0;
            width: 65%;
            height: 100%;
            background-color: #0077B5;
            padding: 100px;
            /*color: #b4d0e7;*/
            color: #eff8ff;
        }

        .right {
            position: absolute;
            right: 0;
            width: 35%;
            height: 100%;
            padding: 0px 60px;
            box-shadow: 0px 0px 10px #000;
        }

        .title {
            font-size: 25px;
            /*font-weight: 500;*/
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 8px 10px;
            font-size: 16px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 0px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

            .form-control:focus {
                border-color: #005f92;
                outline: 0 !important;
                outline-offset: 0 !important;
            }

        .btn {
            display: inline-block;
            padding: 10px 10px;
            margin-bottom: 0;
            font-size: 13px;
            font-weight: 400;
            line-height: 1.42857143;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -ms-touch-action: manipulation;
            touch-action: manipulation;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-image: none;
            border: 1px solid transparent;
            border-radius: 0px;
            color: #fff;
        }

        .btn-primary {
            background-color: #0077B5;
            border: 1px solid #0077B5;
        }

        .btn-default {
            color: #333;
            background-color: #fff;
            border-color: #ccc;
        }

        .mb-20 {
            margin-bottom: 20px !important;
        }

        .mb-14 {
            margin-bottom: 10px !important;
        }

        h1 {
            font-size: 60px;
            margin-bottom: 14px;
        }

        .disclaimer {
            color: #999;
            font-size: 13px;
            text-align: left;
        }

        .div-email-signup {
            position: relative;
            top: 50%;
            margin-top: -230px;
        }

        .div-email-login {
            position: relative;
            top: 50%;
            margin-top: -160px;
        }

        a {
            color: #337ab7;
            text-decoration: none;
        }

        .hidden {
            display: none;
        }

        .sign-up-text  {
            font-size: 14px;
            display: inline;
            
            background-repeat: no-repeat;
            background-position: left center;
            background-size: 20px 20px;
            clear: right;
            padding: 5px 0 5px 30px;
        }
            .sign-up-text.google {
                background-image: url(../assets/images/social/new-google-favicon-512.png);
            }

            .sign-up-text.facebook {
                background-image: url(../assets/images/social/Facebook.png);
            }

    </style>
    <script src="~/assets/vendors/jquery/jquery-3.1.1.min.js"></script>
</head>
<body>
    <div class="full">
        <div class="left">
            <h1 class="text-center">Rikyas</h1>
            <p style="font-size: 50px;">
                A place to share knowledge and better understand the world
            </p>
        </div>
        <div class="right">
            <div class="div-email-signup">
                <h4 class="title ">Sign Up</h4>
                <div class="signup-link mb-20">or <a href="#" onclick="showHideLogin(this);">sign in to your account</a></div>
                <input type="text" id="FName" class="form-control mb-14" placeholder="First Name" />
                <input type="text" id="LName" class="form-control mb-14" placeholder="Last Name" />
                <input type="text" id="Email-Signup" class="form-control mb-14" name="" placeholder="Email" />
                <input type="password" id="Pass-Signup" class="form-control mb-14" name="" placeholder="Password" />
                <div class="disclaimer mb-14">
                    By clicking "Sign Up" you indicate that you have read and agree to the Terms of Service and <a href="/Account/Privacy" target="_blank">Privacy Policy</a>
                </div>
                <button class="btn btn-primary mb-14" style="width: 100%" id="signup-btn" onclick="SignUp(this)" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing...">Sign up</button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text google">Sign up with Google</span></button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text facebook">Sign up with Facebook</span></button>
            </div>
            <div class="div-email-login hidden">
                <h4 class="title ">Sign In</h4>
                <div class="signup-link mb-20">or <a href="#" onclick="showHideLogin(this);">create an account</a></div>
                <input type="text" id="Email-Signup" class="form-control mb-14" name="" placeholder="Email" />
                <input type="password" id="Pass-Signup" class="form-control mb-14" name="" placeholder="Password" />
                <button class="btn btn-primary mb-14" style="width: 100%" id="signup-btn" onclick="SignUp(this)" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Processing...">Sign in</button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text google">Sign in with Google</span></button>
                <button class="btn btn-default mb-14" style="width: 100%" type="button"> <span class="sign-up-text facebook">Sign in with Facebook</span></button>
            </div>
        </div>
    </div>

    <script>
        function showHideLogin(e) {
            var $me = $(e);


            $(".div-email-login").toggleClass("hidden");
            $(".div-email-signup").toggleClass("hidden");

        }
    </script>
</body>
</html>